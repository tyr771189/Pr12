<UserControl x:Class="Interface.Elements.Messages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface.Elements"
             mc:Ignorable="d" MouseDoubleClick="UserControl_MouseDoubleClick"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="69" Width="150" Background="Black" Margin="5">
        <Border CornerRadius="15" Width="30" Height = "30" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border.Background>
                <ImageBrush ImageSource="/Images/watermark.png" Stretch="UniformToFill"/>

            </Border.Background>
        </Border>
        <TextBlock x:Name="Message" Margin="45,5,5,25" Padding="5" TextWrapping="Wrap" Text="Hi, how are you?" Foreground="White"/>
        <TextBlock x:Name="Date" Margin="0,0,5,5" Padding="5" TextWrapping="Wrap" Text="19.11.2002" Foreground="White" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70"/>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
    </Grid>
</UserControl>
